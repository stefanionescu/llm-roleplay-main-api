{
    "compilerOptions": {
        "rootDir": "./src",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "./dist",
        "esModuleInterop": true,
        "strict": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
